<div class="container">
    {{#each comments}}
    <p>{{user.username}}</p>
    <p>{{text}}</p>
    {{/each}}




    <div class="mb-3">
        <form action="/community/{{communityId}}/forum" method="post">
            <label for="exampleFormControlInput1" class="form-label">Write your comment:</label>
            <input type="hidden" name="_id" value="{{communityId}}">
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Is my favorite film..."
                name="text">
            <button type="submit">Add comment</button>
        </form>
    </div>

</div>