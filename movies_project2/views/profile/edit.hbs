<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edit your profile:</h1>
            <hr>

            <form action="/editprofile" method="POST" enctype="multipart/form-data">

                <div class="mb-3 row">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" value="{{user.username}}">
                    </div>
                    <div class="mb-3">
                        <figure class="figure">
                            <img src="{{user.avatar}}" class="figure-img img-fluid rounded-5" alt="user avatr">
                            <figcaption class="figure-caption">Your avatar</figcaption>
                        </figure>
                        <label for="avatar" class="form-label">Avatar</label>
                        <input type="file" class="form-control" id="avatar" name="avatar" value="{{user.avatar}}">
                    </div>
                    <div class="col">
                        <label for="email" class="form-label"> Email </label>
                        <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
                    </div>
                    <div class="col">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password"
                            value="{{user.password}}">
                    </div>
                </div>






                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Save changes</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>